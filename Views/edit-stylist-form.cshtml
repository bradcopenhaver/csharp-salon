<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Happy Heads Hair Salon</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3>Edit Stylist @Model.GetName()</h3>
        <form action="/stylist/edit/@Model.GetId()" method="post">
          <input type="hidden" name="_method" value="PATCH">
          <div class="form-group">
            <label for="stylistName">Stylist name:</label>
            <input type="text" name="stylistName" placeholder="@Model.GetName()">
          </div>
          <button class="btn btn-primary" type="submit">Edit Stylist</button>
        </form>
        <hr>
        <h5><a href="/">Home</a>
      </div>
    </div>
  </div>
